{
    "manifest_version": 3,
    "name": "IMDBetter",
    "description": "Rescores films/shows on IMDB without 10s or 1s being taken into account.",
    "version": "1.0",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128":"images/icon-128.png"
    },
    "content_scripts": [
        {
          "js": ["scripts/content.js"],
          "matches": [
            "https://www.imdb.com/title/*"
          ]
        }
    ]
}